<table class="profile" summary="Profile Information">
	<tr>
		<td class="main">		
			<h1>
				<%= gravatar_for @user %>
				<%= @user.name %>  <!-- escaping script attacks is automatic in rails 3 -->
			</h1>
		</td>
		<td class="sidebar round">
			<strong>Name</strong> <%= @user.name %><br />
			<strong>URL</strong> <%= link_to user_path(@user), @user %> <!-- could be , user_path(@user) -->	
		</td>
	</tr>
</table>
